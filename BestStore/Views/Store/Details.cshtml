@model Product
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>


    <div class="row ">
        <div class="col-md-4 text-center">
            <img src="~/Images/@Model.ImageFileName" class="img-fluid mb-3" alt="This is the product image" width="250" />
        </div>
        <div class="col-md-8">
            <h3 class="mb-3">@Model.Name</h3>
            <h3 class="mb-3">R @Model.Price</h3>
            <button type="button" class="btn btn-warning btn-sm ">
                Add to Cart <i class="bi bi-cart4"></i>
            </button>
            <button type="button"><a class="btn btn-sm text-black" asp-controller="Store" asp-action="Index">Back</a></button>
            <hr />
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Brand</div>
            </div>
            <div class="col-sm-9">
                @Model.Brand
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Category</div>
            </div>
            <div class="col-sm-9">
                @Model.Category
            </div>

            <div class="fw-bold">Description</div>
            <div style="white-space: pre-line">@Model.Description</div>
        </div>
    </div>

</body>
</html>

